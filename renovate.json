{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "* 0-3 1 * *"
  ],
  "timezone": "America/New_York",
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "@admon84"
  ],
  "ignoreDeps": [
    "source-map"
  ],
  "packageRules": [
    {
      "description": "Pin Node.js and Screeps-specific packages",
      "matchPackageNames": [
        "@types/node",
        "@types/screeps",
        "source-map"
      ],
      "enabled": false
    },
    {
      "description": "Group dev dependencies",
      "matchDepTypes": [
        "devDependencies"
      ],
      "groupName": "dev dependencies"
    },
    {
      "description": "Auto-merge patch updates for dev dependencies",
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Hold back major ESLint updates (breaking changes)",
      "matchPackageNames": [
        "eslint"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "semanticCommits": "enabled",
  "commitMessagePrefix": "⬆️",
  "branchPrefix": "chore/"
}
