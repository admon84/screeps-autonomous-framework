    "eslint-plugin-prettier": "^4.0.0",
    "lodash": "^3.10.1",
    "prettier": "^2.2.0",
    "rollup": "^2.33.3",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-screeps": "^1.0.0",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.2"
